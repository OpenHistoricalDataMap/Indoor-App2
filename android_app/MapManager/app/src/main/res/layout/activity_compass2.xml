<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compass2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".compass.Compass2Activity">

    <TextView
        android:text="TextView X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:id="@+id/txtCompassX"/>

    <TextView
        android:text="TextView Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/txtCompassY"
        android:layout_below="@+id/txtCompassX"
        android:layout_alignStart="@+id/txtCompassX"/>

    <TextView
        android:text="TextView Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/txtCompassZ"
        android:layout_below="@+id/txtCompassY"
        android:layout_alignStart="@+id/txtCompassY"/>

    <Button
        android:text="Calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="onClickCalibrationButton"
        android:id="@+id/btnCalibrate"
        android:layout_below="@+id/txtCompassZ"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnDefineWay"/>

    <Button
        android:text="Start Define Way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDefineWay"
        android:onClick="onClickDefineWay"
        android:layout_below="@+id/btnShowList"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="ShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClickShowList"
        android:id="@+id/btnShowList"
        android:layout_below="@+id/btnCalibrate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnDefineWay"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/txtViewListe"
        android:layout_below="@+id/btnDefineWay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"/>

    <Button
        android:text="set high 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnCalibrate"
        android:layout_marginStart="39dp"
        android:id="@+id/btnSetHigNull"
        android:onClick="onClickSetHighNull"
        android:layout_alignTop="@+id/btnCalibrate"/>
</RelativeLayout>
