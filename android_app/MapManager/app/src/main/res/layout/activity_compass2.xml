<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compass2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Compass2">

    <TextView
        android:text="TextView X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:id="@+id/txtCompassX"/>

    <TextView
        android:text="TextView Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/txtCompassY"
        android:layout_below="@+id/txtCompassX"
        android:layout_alignStart="@+id/txtCompassX"/>

    <TextView
        android:text="TextView Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCompassY"
        android:layout_alignStart="@+id/txtCompassY"
        android:layout_marginTop="25dp"
        android:id="@+id/txtCompassZ"/>

    <Button
        android:text="Calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCompassZ"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"
        android:onClick="onClickCalibrationButton"
        android:id="@+id/btnCalibrate"/>
</RelativeLayout>
