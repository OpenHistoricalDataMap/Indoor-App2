<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView android:id="@+id/poiNameLabelTextView"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "/>


    <!-- TODO: add layout_toendOf="" with the same ID as of layout_toRightOf for better support -->
    <TextView android:id="@+id/poiNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/poiNameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*name will be here*"/>


    <!-- TODO: add layout_toendOf="" with the same ID as of layout_toRightOf for better support -->
    <TextView android:id="@+id/poiGalleryLabelTextView"
        android:layout_below="@+id/poiNameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poiPicturesListView"
        android:layout_below="@id/poiGalleryLabelTextView"
        android:layout_above="@+id/bottomBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/poiAddPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take new picture"
            android:onClick="takePicture"/>

        <Button
            android:id="@+id/poiManageConnections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Connections"
            android:onClick="poiManageConnections"/>

    </LinearLayout>


</RelativeLayout>